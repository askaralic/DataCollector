<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/common_button_bg"/>
            <solid android:color="@color/common_button_pressed" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/common_button_bg"/>
            <solid android:color="@color/common_button_pressed" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/common_button_bg"/>
            <solid android:color="@color/common_button_bg" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
